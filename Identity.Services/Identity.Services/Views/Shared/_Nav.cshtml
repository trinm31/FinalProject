@using Duende.IdentityServer.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-color p-2 ml-5">

        <a href="~/" class="navbar-brand">
            <img src="~/logo-01.png" width="30" class="icon-banner mr-4">
            Exam Management System
        </a>

        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">@name</a>
                </li>
                <li class="nav-item">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link" asp-action="Index" asp-controller="Account">User Managerment</a>
                    }
                </li>
                <li>
                     <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
                </li>
            </ul>
        }
    
    </nav>
</div>
