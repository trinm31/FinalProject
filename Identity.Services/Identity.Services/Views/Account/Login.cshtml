@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>
    <meta http-equiv="Content-Security-Policy" content="default-src 'self' data: gap: https://ssl.gstatic.com 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; media-src *; img-src 'self' data: content:;">
    <title>Exam Management System</title>
    <link rel="icon" type="image/x-icon" href="~/logo-01.png"/>
    <link rel="shortcut icon" type="image/x-icon" href="~/logo-01.png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/login.css"/>
</head>
<body>
<div class="login-section">
    @if (Model.EnableLocalLogin)
    {
        <div class="container">
            <div class="login-wrapper">
                <div class="row w-100 justify-content-center align-items-center">
                    <div class="col-md-offset-5 col-md-3 ">
                        <div class="form-login">
                            <h4>Welcome back.</h4>
                            <form asp-route="Login">
                                <input type="hidden" asp-for="ReturnUrl"/>
                                <input class="form-control input-sm chat-input" placeholder="Username" asp-for="Username" autofocus/>
                                <br>
                                <input type="password" class="form-control input-sm chat-input" placeholder="Password" asp-for="Password" autocomplete="off"/>
                                <br>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="RememberLogin">
                                            <label class="form-check-label" asp-for="RememberLogin">
                                                Remember My Login
                                            </label>
                                        </div>
                                    </div>
                                }
                                <partial name="_ValidationSummary"/>
                                <div class="wrapper">
                                    <button class="btn btn-primary" name="button" value="login">Login</button>
                                    <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                                </div>
                                @* <a href="@Url.Action("Register", new { Model.ReturnUrl })">New User? Register</a> *@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</body>
</html>

